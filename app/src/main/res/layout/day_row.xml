<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayRowCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="40dp"
    android:paddingTop="14dp"
    android:paddingEnd="20dp"
    android:paddingBottom="14dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/nameScheduleDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/day_example_schedule"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/scheduleSubjectSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGreyDivider"
        app:layout_constraintTop_toBottomOf="@+id/nameScheduleDay"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>